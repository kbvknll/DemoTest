<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="using:DemoTest.Data"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DemoTest.MaterialsPage"
			 x:DataType="local:ProductMaterial">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		

		<DataGrid IsReadOnly="True" AutoGenerateColumns="False" Name="DataGridMaterials" ItemsSource="{Binding}">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Продукт" Binding="{Binding Product.ProductName}"/>
				<DataGridTextColumn Header="Материал" Binding="{Binding Material.MaterialName}"/>
				<DataGridTextColumn Header="Количество, необходимое для производства" Binding="{Binding QuantityRequired}"/>
			</DataGrid.Columns>
			
		</DataGrid>

	</Grid>
</UserControl>
