<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:data="clr-namespace:DemoTest.Data"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DemoTest.ProductsPage"
             x:DataType="data:Product"
             FontFamily="Comic Sans MS">

	<UserControl.Styles>
		<Style Selector="TextBlock">
			<Setter Property="FontFamily" Value="Comic Sans MS"/>
		</Style>
		<Style Selector="Button">
			<Setter Property="FontFamily" Value="Comic Sans MS"/>
			<Setter Property="Background" Value="#546F94"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="Padding" Value="15,8"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="CornerRadius" Value="5"/>
		</Style>
		<Style Selector="Button:pointerover">
			<Setter Property="Background" Value="#465A7A"/>
		</Style>
		<Style Selector="Button:pressed">
			<Setter Property="Background" Value="#3A4B65"/>
		</Style>
	</UserControl.Styles>

	<Grid Background="#FFFFFF">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Border Grid.Row="0" Background="#ABCFCE" Padding="15">
			<TextBlock Text="Список продукции"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="#2C3E50"/>
		</Border>

		<ListBox Grid.Row="1" Name="ListBoxProducts"
                 ItemsSource="{Binding}"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 HorizontalAlignment="Center"
                 Background="#FFFFFF"
                 BorderThickness="0">
			<ListBox.ItemTemplate>
				<DataTemplate x:DataType="data:Product">
					<Border BorderBrush="#ABCFCE"
                            BorderThickness="2"
                            CornerRadius="8"
                            Margin="8"
                            Padding="20"
                            Background="#FFFFFF">
						<Grid Width="600">
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
							</Grid.RowDefinitions>

							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*"/>
								<ColumnDefinition Width="Auto"/>
							</Grid.ColumnDefinitions>

							<StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,8">
								<TextBlock Text="{Binding ProductTypeId, StringFormat='Тип {0}'}"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Foreground="#2C3E50"/>
								<TextBlock Text=" | "
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Margin="5,0,5,0"
                                           Foreground="#2C3E50"/>
								<TextBlock Text="{Binding ProductName}"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Foreground="#2C3E50"/>
							</StackPanel>

							<TextBlock Grid.Row="0" Grid.Column="1"
                                       Text="{Binding CostPrice, StringFormat='{}{0} р'}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Right"
                                       Margin="20,0,0,0"
                                       Foreground="#546F94"/>

							<TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="{Binding Article, StringFormat='Артикул: {0}'}"
                                       FontSize="12"
                                       Foreground="#7F8C8D"
                                       Margin="0,8,0,8"/>

							<TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="{Binding MinPartnerPrice, StringFormat='Минимальная стоимость для партнера: {0} р'}"
                                       FontSize="12"
                                       Margin="0,0,0,8"
                                       Foreground="#2C3E50"/>

							<TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="{Binding PackageWidth, StringFormat='Ширина: {0} м'}"
                                       FontSize="12"
                                       Margin="0,0,0,0"
                                       Foreground="#2C3E50"/>
						</Grid>
					</Border>
				</DataTemplate>
			</ListBox.ItemTemplate>

			<ListBox.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel Orientation="Horizontal"/>
				</ItemsPanelTemplate>
			</ListBox.ItemsPanel>
		</ListBox>

		<Border Grid.Row="2" Background="#ABCFCE" Padding="10">
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
				<Button Content="Добавить" Click="AddButton_Click_1" Margin="5,0"/>
				<Button Content="Редактировать" Click="EditButton_Click_2" Margin="5,0"/>
			</StackPanel>
		</Border>
	</Grid>
</UserControl>